			<div data-bind="style: {'border': connected() ? '1px solid green' : '1px solid red', 'padding': '0 0 0 0','width': '95%'}">
				<div class="row-fluid">
					<label style="margin: 2px 4px 2px 0; width: 8em;" class="control-label">{{ _('Bridge address') }}</label>
